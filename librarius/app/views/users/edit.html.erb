<% content_for :right do %>

<h5>Avatars</h5>

<p>To get an image of your beautiful face next to posts and comments, <a href="http://site.gravatar.com/">sign up for a free gravatar</a> with the same e-mail address as on this site.</p>

<% end %>

<h1>Settings</h1>

<p class="subtitle">for <%= @user.display_name %></p>

<%= error_messages_for :user %>

<% form_for :user, :url => user_path(@user),
  :html => { :method => :put } do |f| -%>
  <%= render :partial => "settings", :object => f %>
  <p><%= submit_tag 'Change username or e-mail', :or => link_to( "cancel", "/") %></p>
<% end -%>

<br />

<% form_for :user, :url => user_path(@user),
  :html => { :method => :put } do |f| -%>
  <%= render :partial => "password", :object => f %>
  <p><%= submit_tag 'Change Password', :or => link_to( "cancel", "/") %></p>
<% end -%>

<br />


<% form_for :user, :url => user_path(@user),
  :html => { :method => :put } do |f| -%>
  <%= render :partial => "contact_info", :locals => { :settings => f } %>
  <p><%= submit_tag 'Update profile', :or => link_to( "cancel", "/") %></p>
<% end -%>
